  "description": "Microservice for LBRY",
  "devDependencies": {
    "@inc/eslint-config": "^2019.7.23",
    "eslint": "^6.2.1",
    "husky": "^3.0.4",
    "micro-dev": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "snazzy": "^8.0.0",
