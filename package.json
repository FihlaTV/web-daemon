    "updates": "^8.5.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git add -A :/"
    }
  },
  "name": "web-daemon",
  "private": true,
  "scripts": {
    "deploy": "vagrant push",
    "format": "eslint '**/*.js' --fix",
