{
  "author": {
    "email": "paul@lbry.io",
    "name": "Paul Anthony Webb"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "axios": "^0.18.0",
    "base64-img": "^1.0.4",
    "got": "^9.4.0",
    "graceful-fs": "^4.1.15",
    "micro": "^9.3.3",
    "vne": "^1.2.4"
  },
  "description": "Microservice for LBRY",
  "devDependencies": {
    "@inc/eslint-config": "^1.1.2",
    "eslint": "^5.10.0",
    "husky": "^1.2.0",
    "micro-dev": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "snazzy": "^8.0.0",
    "standardx": "^3.0.1",
    "updates": "^5.4.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git add -A :/"
    }
  },
  "name": "web-daemon",
  "private": true,
  "scripts": {
    "deploy": "vagrant push",
    "format": "eslint '**/*.js' --fix",
    "start": "npm i && micro -l tcp://localhost:5200",
    "watch": "micro-dev -w routes -p ${PORT:-5200}",
    "test": "run-s test:*",
    "test:dependencies": "updates -u ./",
    "test:lint": "standardx --verbose | snazzy"
  },
  "version": "1.0.3"
}
